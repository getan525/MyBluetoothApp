<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.getan.mybluetoothapp.MainActivity">

  <android.support.design.widget.TabLayout
      android:id="@+id/tab"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:tabIndicatorHeight="0dp"
      android:background="@drawable/tab_selector"
      app:tabBackground="@drawable/tab_selector"
      app:tabMinWidth="40dip"
      app:tabGravity="fill"
      app:tabMode="fixed"
      app:tabMaxWidth="0dp"
      app:tabPaddingEnd="5dip"
      app:tabPaddingStart="5dip"
      app:tabTextColor="@color/wx_head_default"
      app:tabSelectedTextColor="@color/wx_head_selected"
      app:tabTextAppearance="@dimen/tab_text_size">

  </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>

</LinearLayout>
